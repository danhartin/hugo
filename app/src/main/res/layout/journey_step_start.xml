<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holder"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/background_medium_grey" />

    <TextView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:id="@+id/centrePoint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/dark_green_background_10dp_corners" />

    <TextView
        android:id="@+id/startAddressTextView"
        android:layout_width="0dp"
        android:layout_toRightOf="@id/centrePoint"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingRight="25dp"
        android:text="64 ALFRED STREET, DERBY, UK"
        android:textSize="16sp"/>
</RelativeLayout>