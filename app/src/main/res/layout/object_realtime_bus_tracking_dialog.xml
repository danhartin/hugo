<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/white_background_10dp_corners"
    android:padding="5dp"
    android:orientation="vertical"
    android:maxWidth="300dp"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="1dp"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/object_realtime_bus_tracking_dialog_servicename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="the mickleover"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/object_realtime_bus_tracking_dialog_free_wifi_text"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Free WiFi"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/object_realtime_bus_tracking_dialog_wifi_enabled_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/green_tick" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="1dp"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/object_realtime_bus_tracking_dialog_prediction_display"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="2 mins"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/object_realtime_bus_tracking_dialog_usb_text"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="USB power"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/object_realtime_bus_tracking_dialog_usb_enabled_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/green_tick" />


    </LinearLayout>




</LinearLayout>