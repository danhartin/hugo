<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:background="@color/background_light_grey"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/mainHolder"
        android:orientation="horizontal"
        android:background="@drawable/white_background_10dp_corners"
        android:weightSum="301"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="150"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="catch"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/journey_map_item_service_colour"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/background_dark_grey"
                        android:src="@drawable/circle_cover" />

                    <TextView
                        android:id="@+id/journey_map_item_service_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="ilkeston flyer"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/journey_map_item_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="towards cotmanhay"
                    android:textAllCaps="true" />

                <LinearLayout
                    android:id="@+id/journey_map_item_mango_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/green_tick" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="mango" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@color/background_light_grey"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="150"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/nav_live_blue"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="DUE IN"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/journey_map_item_realtime_circle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/blue_circle" />

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/journey_map_item_realtime_mins_counter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="15"
                            android:textColor="@color/pure_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/journey_map_item_realtime_mins_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="mins"
                            android:textColor="@color/pure_white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/journey_map_item_realtime_error_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/pure_white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="An error has occurred and this bus can no longer be tracked"
                        android:textSize="12sp"
                        android:visibility="gone" />


                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:background="@drawable/white_background_10dp_corners"
        android:layout_below="@id/mainHolder"
        android:weightSum="301"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="110"
            android:id="@+id/journey_map_item_features_holder"
            android:padding="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingRight="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/journey_map_item_free_wifi_holder"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="Free WiFi"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/green_tick" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/journey_map_item_usb_power_holder"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="USB Power"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/green_tick" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        
        <TextView
            android:layout_width="0dp"
            android:id="@+id/journey_map_item_features_divider"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background_light_grey"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/journey_map_item_sit_back_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="190"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="SIT BACK AND RELAX FOR AROUND 25 MINS"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textStyle="normal" />

    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/bus_journey_icon"
        android:layout_height="20dp" />

</RelativeLayout>