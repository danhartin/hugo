<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/object_realtime_prediction_service_colour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/circle_cover" />

        <TextView
            android:id="@+id/object_realtime_prediction_service_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="15dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/object_realtime_prediction_destination_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/background_dark_grey"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:maxLines="1"
            android:paddingBottom="16dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/object_realtime_prediction_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/unselected_icon"
            android:padding="5dp"
            android:id="@+id/object_realtime_prediction_selection_image"
            android:layout_height="50dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/object_realtime_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:background="@color/background_light_grey" />


</LinearLayout>