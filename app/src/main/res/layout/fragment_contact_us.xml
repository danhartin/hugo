<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <!--Social media pane -->

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/white_background_10dp_corners"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/share_icon"
                    android:layout_marginTop="5dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:text="Social media"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/facebook_button"
                        android:src="@drawable/facebook_logo"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/twitter_button"
                        android:src="@drawable/twitter_icon"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/insta_button"
                        android:src="@drawable/instagram_icon"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/call_us_button"
                android:background="@drawable/white_background_10dp_corners"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/call_us_icon"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:text="Call us"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Tel: 01773 712265"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/website_button"
                android:background="@drawable/white_background_10dp_corners"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/web_icon"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:text="Check out the website"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="www.trentbarton.co.uk"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/email_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_background_10dp_corners"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/email_icon"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:text="Email us"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="talk@trentbarton.co.uk"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_background_10dp_corners"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/address_icon"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:text="Write to us"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="trentbarton\nMansfield Road\nHeanor\nDerbyshire\nDE75 7BG"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>









        </LinearLayout>


    </ScrollView>

</RelativeLayout>
